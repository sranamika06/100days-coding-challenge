import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
       Scanner sc = new Scanner(System.in);
        float pi = 3.14f;
        float r = sc.nextFloat();
        float b = pi*r*r;
        System.out.println(b);
    }
}
